<%- include('../partials/admin/header') %> 
<%- include('../partials/admin/sidebar') %>

<main class="col-span-1 p-4 sm:p-6 lg:col-span-4 lg:p-8">
  <header class="border-b-2 border-black pb-6 dark:border-gray-600">
    <div>
      <h1 class="text-4xl font-extrabold uppercase">Manage Users</h1>
      <p class="text-neutral-600 dark:text-neutral-400">APPROVE OR REVOKE USER ACCESS</p>
    </div>
  </header>

  <section class="mt-8">
    <div class="overflow-x-auto border-2 border-black dark:border-gray-600">
      <table class="w-full text-left">
        <thead class="bg-black text-yellow-300">
          <tr>
            <th class="p-4 uppercase">Username</th>
            <th class="p-4 uppercase">Email</th>
            <th class="p-4 uppercase">Status</th>
            <th class="p-4 uppercase">Role</th>
            <th class="p-4 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr class="border-b-2 border-black bg-white even:bg-neutral-50 dark:bg-gray-800 dark:even:bg-gray-700 dark:border-gray-600">
            <td class="p-4 font-bold"><%= user.username %></td>
            <td class="p-4"><%= user.email %></td>
            <td class="p-4">
              <% if (user.is_approved) { %>
                <span class="bg-green-200 text-green-800 px-2 py-1 text-sm font-bold">Approved</span>
              <% } else { %>
                <span class="bg-yellow-200 text-yellow-800 px-2 py-1 text-sm font-bold">Pending</span>
              <% } %>
            </td>
            <td class="p-4"><%= user.is_admin ? 'Admin' : 'User' %></td>
            <td class="p-4">
              <% if (!user.is_admin) { %>
                <% if (user.is_approved) { %>
                  <form action="/admin/users/approve/<%= user.id %>" method="POST" class="inline">
                    <input type="hidden" name="is_approved" value="0">
                    <button type="submit" class="font-bold uppercase text-red-600">Revoke</button>
                  </form>
                <% } else { %>
                  <form action="/admin/users/approve/<%= user.id %>" method="POST" class="inline">
                    <input type="hidden" name="is_approved" value="1">
                    <button type="submit" class="font-bold uppercase text-green-600">Approve</button>
                  </form>
                <% } %>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>
</main>

<%- include('../partials/admin/footer') %>
